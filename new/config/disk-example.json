{
    "disks": [
        {
            "device": "/dev/vda",
            "partition_table": "gpt",
            "wipe_disk": true,
            "partitions": [
                {
                    "label": "EFI",
                    "size": "512MiB",
                    "filesystem": "fat32",
                    "partition_type": "esp",
                    "mountpoint": "/boot"
                },
                {
                    "label": "swap",
                    "size": "8GiB",
                    "filesystem": "swap",
                    "partition_type": "linux-swap"
                },
                {
                    "label": "root",
                    "size": "rest",
                    "filesystem": "btrfs",
                    "partition_type": "linux",
                    "mountpoint": "/",
                    "encrypt": true,
                    "luks_name": "cryptroot",
                    "btrfs_subvolumes": [
                        {
                            "name": "@",
                            "mountpoint": "/",
                            "mount_options": ["compress-force=zstd", "noatime"]
                        },
                        {
                            "name": "@home",
                            "mountpoint": "/home",
                            "mount_options": ["compress-force=zstd"]
                        },
                        {
                            "name": "@var_cache",
                            "mountpoint": "/var/cache",
                            "mount_options": ["compress-force=zstd"]
                        },
                        {
                            "name": "@var_log",
                            "mountpoint": "/var/log",
                            "mount_options": ["compress-force=zstd"]
                        },
                        {
                            "name": "@srv",
                            "mountpoint": "/srv",
                            "mount_options": ["compress-force=zstd"]
                        }
                    ]
                }
            ]
        }
    ]
}
