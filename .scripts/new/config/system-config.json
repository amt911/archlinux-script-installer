{
    "bootloader": {
        "type": "systemd-boot",
        "enableREISUB": true,
        "extraArguments": "bla bla bla (for example krom keyboard)"
    },

    "users": [
        {
            "user": "test1",
            "password": "123",
            "shell": "/bin/fish",
            "sudoAccess": true
        },
        {
            "user": "test2",
            "password": "123",
            "shell": "/bin/zsh",
            "sudoAccess": false
        }
    ],

    "extraServices": {
        "enable": [
            "test1",
            "test2"
        ]
    },

    "filesystem": {
        "type": "btrfs",
        "encryption": {
            "password": "optional bla bla bla",
            "encryptionKeyfile": {
                "device": "bla bla bla",
                "formatDevice": false                
            }
        },
        "wip": "There should be in here the desired subvolumes, mountpoints and also" 
    },

    "enableMicrocode": true,

    "network": {
        "type": "NetworkManager",
        "enableWireguard": true,
        "firewall": {
            "type": "firewalld",
            "extraRules": [
                "bla1",
                "bla2",
                "bla3"
            ]
        } 
    },

    "locales": {
        "selectedLocales": [
        "en_US.UTF-8 UTF-8",
        "es_ES.UTF-8 UTF-8"
        ],
        "desiredLocale": "es_ES.UTF-8 UTF-8"
    },

    "region": {
        "continent": "Europe",
        "region": "Madrid"
    },

    "enableNTP": true,

    "enableMakepkgMultiCore": true,

    "virtManager": {
        "enabled": true,
        "users": [
            "andres"
        ]
    },

    "pacman":{
        "config": {
            "parallelDownloads": true,
            "color": true,
            "multilib": true,
            "paccache": {
                "enable": true
            }
        },
        "packages": [
            "man-db",
            "bla bla bla"
        ]
    },

    "udevRules": [
        {
            "filename": "a.rules",
            "content": "blablabla"
        }
    ],

    "graphicsDriver": {
        "selectedDrivers": [
            "nvidia",
            "nvidia-open",
            "nvidia-open-beta",
            "intel",
            "amd"
        ],
        "installEnvyControl": true
    },

    "desktopEnvironment": "kde"
}