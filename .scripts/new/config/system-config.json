{
    "bootloader": {
        "type": "systemd-boot",
        "enable_reisub": true,
        "extra_arguments": "bla bla bla (for example krom keyboard)"
    },

    "users": [
        {
            "user": "test1",
            "password": "123",
            "shell": "/bin/fish",
            "sudo_access": true
        },
        {
            "user": "test2",
            "password": "123",
            "shell": "/bin/zsh",
            "sudo_access": false
        }
    ],

    "extra_services": {
        "enable": [
            "test1",
            "test2"
        ]
    },

    "partitioning": {
        "device": "/dev/blablabla",
        "partitions": [
            {
                "filesystem": {
                    "type": "btrfs",
                    "encryption": {
                        "password": "optional bla bla bla",
                        "encryption_keyfile": {
                            "device": "bla bla bla",
                            "format_device": false                
                        }
                    },
                    "wip": "There should be in here the desired subvolumes, mountpoints and also" 
                }
            }
        ]
    },

    "enable_microcode": true,

    "network": {
        "type": "NetworkManager",
        "enable_wireguard": true,
        "firewall": {
            "type": "firewalld",
            "extra_rules": [
                "bla1",
                "bla2",
                "bla3"
            ]
        } 
    },

    "locales": {
        "selected_locales": [
        "en_US.UTF-8 UTF-8",
        "es_ES.UTF-8 UTF-8"
        ],
        "desired_locale": "es_ES.UTF-8 UTF-8"
    },

    "timezone": {
        "region": "Europe",
        "city": "Madrid"
    },

    "enableNTP": true,

    "enable_makepkg_multi_core": true,

    "virt_manager": {
        "enabled": true,
        "users": [
            "andres"
        ]
    },

    "pacman":{
        "config": {
            "parallelDownloads": true,
            "color": true,
            "multilib": true,
            "paccache": {
                "enable": true
            }
        },
        "packages": [
            "man-db",
            "bla bla bla"
        ]
    },

    "udevRules": [
        {
            "filename": "a.rules",
            "content": "blablabla"
        }
    ],

    "graphicsDriver": {
        "selectedDrivers": [
            "nvidia",
            "nvidia-open",
            "nvidia-open-beta",
            "intel",
            "amd"
        ],
        "installEnvyControl": true
    },

    "desktopEnvironment": "kde"
}